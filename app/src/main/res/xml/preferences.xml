<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="eu"
        android:entries="@array/list_preference_entry_titles"
        android:entryValues="@array/list_preference_entry_values"
        android:key="listLang"
        android:summary="%s"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/language" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_hideold"
        android:title="@string/hideold" />
    <Preference
        android:key="editusername"
        android:title="@string/editusername"/>

    <Preference
        android:key="about"
        android:title="@string/about"/>

    <Preference
        android:key="logout"
        android:title="@string/logout"/>



</PreferenceScreen>